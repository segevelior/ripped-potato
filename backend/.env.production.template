# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# Environment
NODE_ENV=production

# Server Configuration
PORT=5001
HOST=0.0.0.0

# MongoDB Atlas Configuration
# Replace with your actual MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=

# JWT Configuration
# Generate secure secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=
JWT_EXPIRE=7d

# CORS Configuration
# Replace with your actual domain(s) - separate multiple domains with commas
CORS_ORIGIN=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Frontend URL (for redirects and references)
FRONTEND_URL=https://yourdomain.com

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
HSTS_MAX_AGE=31536000

# Performance Configuration
COMPRESSION_LEVEL=6
REQUEST_TIMEOUT=30000

# Monitoring and Health
HEALTH_CHECK_ENABLED=true
LOG_LEVEL=info

# Database Pool Settings
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

# Production Optimizations
TRUST_PROXY=1
SESSION_SECURE=true
COOKIE_SECURE=true

# App Information
APP_VERSION=1.0.0

# AI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7