# Production Environment Configuration
# SynergyFit Backend - Production Deployment

# Environment
NODE_ENV=production

# Server Configuration
PORT=5001
HOST=0.0.0.0

# Database Configuration
# TODO: Replace with your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ripped-potato?retryWrites=true&w=majority

# JWT Configuration
# TODO: Generate secure secret with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_SECURE_32_CHAR_SECRET
JWT_EXPIRE=7d

# CORS Configuration
# TODO: Replace with your actual domain
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance Configuration
COMPRESSION_LEVEL=6
HELMET_CONTENT_SECURITY_POLICY=false

# Monitoring and Health
HEALTH_CHECK_ENABLED=true
API_TIMEOUT=30000

# Database Pool Settings
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

# Production Optimizations
TRUST_PROXY=1
SESSION_SECURE=true
COOKIE_SECURE=true